{
  "name": "osr-generators",
  "version": "0.1.0",
  "description": "Generators for OSR-style tabletop roleplaying games",
  "repository": {
    "type": "github",
    "url": "git+https://github.com/riccjohn/osr-generators.git"
  },
  "private": false,
  "type": "module",
  "author": {
    "email": "riccjohn@gmail.com",
    "name": "John Riccardi"
  },
  "bugs": "https://github.com/riccjohn/osr-generators/issues",
  "keywords": [
    "osr",
    "rpg",
    "ttrpg",
    "knave",
    "mork",
    "borg",
    "cairn",
    "d&d",
    "dungeon",
    "dragon",
    "shadowdark",
    "tabletop",
    "roleplaying"
  ],
  "license": "GPL-3.0-only",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "lint": "eslint",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "pnpm lint --fix",
      "pnpm test:ci"
    ]
  }
}
